<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fanzin Application</title>
    @Styles.Render("~/Content/cssAdmin")
    @Styles.Render("~/Content/jHtmlArea/jHtmlAreacss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fanzin Admin", "Index", "AdminPanel", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("پیغام ها", "Index", "ContactUs")</li>
                    <li>@Html.ActionLink("خدمات", "Index", "CompanyServices")</li>
                    <li>@Html.ActionLink("اعضاء", "Index", "CompanyMembers")</li>
                    <li>@Html.ActionLink("اسلایدها", "Index", "Slides")</li>
                    <li>@Html.ActionLink("درباره ما", "Index", "AboutUs")</li>
                    <li>@Html.ActionLink("نمایش سایت", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Admin Panel Fanzin.ir</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jHtmlAreajs")
    @RenderSection("scripts", required: false)
</body>
</html>
